	<select id="getTmMessxm" parameterType="hashmap" resultType="TmMessxm">
	<![CDATA[
		SELECT ROWNUM AS id
			 , A.MSGE_CODE	/* 메시지코드 */
			 , A.MSGE_CNTT	/* 메시지내용 */
			 , A.MSEN_CNTT	/* 메시지영문내용 */
			 , A.MSKN_CODE	/* 메시지종류코드 */
			 , A.MSDV_CODE	/* 메시지구분코드 */
		  FROM TM_MESSXM A		  
	]]>		
	<trim prefix="WHERE" prefixOverrides="AND|OR">
	<if test="MSGE_CNTT != null and MSGE_CNTT != ''">
		   AND A.MSGE_CODE || A.MSGE_CNTT LIKE '%' || #{MSGE_CNTT} || '%'	/* 메시지내용 */
	</if>
	</trim>
 		 ORDER BY A.MSGE_CODE
	</select>

